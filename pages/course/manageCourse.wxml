<view class="container">
  <view wx:if="{{ patientInfo.length==0}}" class="none-data">
    <view>暂无历史评估信息</view>
  </view>
  <block wx:for="{{patientInfo}}" wx:for-item="item" wx:for-index="idx">
    <view class="form-group" data-course="{{item}}" bindtap="onCourseTap">
      <view class="form-item"  >
        <view class="form-item-label">
          <text>课程状态</text>
        </view>
        <view class="form-item-input">
          {{item.StatusName}}
        </view>
      </view>
      <view class="form-item">
        <view class="form-item-label">
          <text>课程日期</text>
        </view>
        <view class="form-item-input">
          {{item.Date}}
        </view>
      </view>
      <view class="form-item">
        <view class="form-item-label">
          <text>课程概要</text>
        </view>
        <view class="form-item-input">
          {{item.Speaker}} {{item.CourseName}}
        </view>
      </view>
    </view>
  </block>
</view>